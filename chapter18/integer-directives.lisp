(format nil "~d" 1000000)   ; => "1000000"
(format nil "~:d" 1000000)  ; => "1,000,000"
(format nil "~@d" 1000000)  ; => "+1000000"
(format nil "~:@d" 1000000) ; => "+1,000,000"

(format nil "~9d" 33)    ; => "       33"
(format nil "~9,'0d" 33) ; => "000000033"

(format nil "~4,'0d-~2,'0d-~2,'0d" 2005 6 10) ; => "2005-06-10"

(format nil "~:d" 10000000)     ; => "10,000,000"
(format nil "~,,'.:d" 10000000) ; => "10.000.000"

(format nil "~b" 33)      ; => "100001"
(format nil "~8,'0b" 33)  ; => "00100001"
(format nil "~16,'0b" 33) ; => "0000000000100001"
